@model FilterDto
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Index", "Home", null, FormMethod.Get, null, new { @class = "form-row" }))
{
    <div class="col-1 label">
        <label>Text:</label>
    </div>
    <div class="col-4">
        <div class="form-group">
            @Html.EditorFor(e => e.Text, new { htmlAttributes = new { @class = "form-control", @placeholder="Type here..." } })
        </div>
    </div>
    <div class="col-1 label">
        <label>Done:</label>
    </div>
    <div class="col-4">
        <div class="form-group">
            @Html.EditorFor(e => e.IsDone, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="col-2">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
}
