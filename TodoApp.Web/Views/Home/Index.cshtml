@model ListViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Todo list</h1>

<div class="row d-flex align-items-center">
    <div class="col-2">
        @Html.ActionLink("Create Todo", "Create", "Home", null, new { @class = "btn btn-success mb-3" })
    </div>
    <div class="col-9">
        @await Html.PartialAsync("~/Views/Home/Partials/_FilterPartial.cshtml", Model.Filter)
    </div>
    <div class="col-1 d-flex justify-content-end">
        @await Html.PartialAsync("~/Views/Home/Partials/_PagerPartial.cshtml", Model.Filter)
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Text</th>
            <th scope="col">Done</th>
            <th scope="col">Details</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var todo in Model.List)
        {
            @await Html.PartialAsync("~/Views/Home/Partials/_TableRowPartial.cshtml", todo)
        }
    </tbody>
</table>

